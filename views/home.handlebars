<!doctype html>
<html>
	<head>
		<title>Landing Page</title>
		<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
		<link href="/css/style.css" rel="stylesheet">
	</head>
	
	<body>
	
		<div class="header">
			<h1><a href = "/index.html"><img id="logout" src = "/image/logout.jpg" width="29" height="29"  ></a>
					My Tasks
				<a href="/input.html" class="addButton">
					<img src = "/image/add.jpg" width="20" height="20">
				</a>
			</h1>
		</div>

		<nav>
			
		</nav> 
		<div class = "intro">
			<p>{{welcome}}</p>
			<p>To add a new task, click on the + button.</p>

		</div>


		
{{#if viewAlt}}
{{#each tasks}} 
<ul class="tasks">
	<li class ="tasklist" id= "{{id}}">
	<p>{{taskname}}</p>
    <p>{{time}}</p> 
    <div class ="countdown">{{countdown}}</div> 
    <p>{{location}}</p>
    {{#if soundAlt}}
<audio controls="controls" onloadeddata="var audioPlayer = this; setTimeout(function() { audioPlayer.play(); }, {{onsetTime}})">
		<source src="/pricecenter.m4a" type="audio/mpeg">
		Your browser does not support the audio element.
		</audio>
		{{else}}
		<audio controls="controls" onloadeddata="var audioPlayer = this; setTimeout(function() { audioPlayer.play(); }, {{onsetTime}})">
		<source src="/time.m4a" type="audio/mpeg">
		Your browser does not support the audio element.
		</audio>
		{{/if}}
			<div class="notification">
			<label for="notification">Notification:</label><br>
			<input type="checkbox" id="repeat" name="date" value="Speaker">Sound
			<input type="checkbox" id="repeat" name="date" value="Vibration">Vibration
			<input type="checkbox" id="repeat" name="date" value="Headphones">Headphones
		</div>
		
     <a href="#" class="deletingTask"> <img src = "/image/delete.jpg" width="21" height="21"></a>
</li>
</ul>
{{/each}}

{{else}}
{{#each tasks}} 
<ul class="tasks">
	<li class ="tasklist" id= "{{id}}">
	<p>{{taskname}}</p>
    <p>{{time}}</p> 
    <div class ="countdown">{{countdown}}</div> 
    <p>{{location}}</p>
    {{#if soundAlt}}
<audio controls="controls" onloadeddata="var audioPlayer = this; setTimeout(function() { audioPlayer.play(); }, {{onsetTime}})">
		<source src="/pricecenter.m4a" type="audio/mpeg">
		Your browser does not support the audio element.
		</audio>
		{{else}}
		<audio controls="controls" onloadeddata="var audioPlayer = this; setTimeout(function() { audioPlayer.play(); }, {{onsetTime}})">
		<source src="/time.m4a" type="audio/mpeg">
		Your browser does not support the audio element.
		</audio>
		{{/if}}

     <a href="#" class="deletingTask"> <img src = "/image/delete.jpg" width="21" height="21"></a>
</li>
</ul>
{{/each}}
{{/if}}


	<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/home.js"></script>
	

	</body>
</html>