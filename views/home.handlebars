			<option value="15:">15</option>
			<option value="20:">20</option>	
			<option value="25:">25</option>
			<option value="30:">30</option>	
			<option value="35:">35</option>
			<option value="40:">40</option>	
			<option value="45:">45</option>
			<option value="50:">50</option>
			<option value="55:">55</option>
			</select>
			:
			<select id="time3" name="time3">
  			<option value="00">00</option>
			<option value="30">30</option>
		    </select>
		</div>



		<div class="location">
			<label for="location">Location:</label><br>
			<input type="text" id="location" value = "Price Center" name="location" disabled>
			<a href="/testmap.html"><img id="locationPic" src = "/image/location.jpg" width="25" height="30"> </a>
		</div><br>

		<div class="repeat">
			<label for="repetition">Repeat:</label><br>

		
    <input type="checkbox" id="S1" name="date" value="7">Sun
  
    <input type="checkbox" id="M" name="date" value="1">Mon
  
    <input type="checkbox" id="T" name="date" value="2">Tue
  
    <input type="checkbox" id="W" name="date" value="3">Wed
  
    <input type="checkbox" id="T" name="date" value="4">Thu
  
    <input type="checkbox" id="F" name="date" value="7">Fri
  
    <input type="checkbox" id="S" name="date" value="7">Sat
  	</div>

		<div class="notification2">
			<label for="notification2">Notification:</label><br>
			<input type="radio" id="note" name="pushnote" value="Speaker">Speaker
			<input type="radio" id="note" name="pushnote" value="Vibration">Vibration
			<input type="radio" id="note" name="pushnote" value="Headphones">Headphones
		</div>

	 <input type="submit" id="submitB" class="btn btn-default" value="save">
	 <input class="btn btn-default" value="Cancel" onclick="cancel()">
		 
	</form>

		</div>

{{#each tasks}} 

<ul class="tasks">
	<li class ="tasklist" id= "{{id}}">
			
	<p>{{taskname}}</p >
    <p>{{time}}</p > 
